// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id @default(cuid())
  name           String
  created_at     DateTime         @default(now())
  TodoList       TodoList[]
  Usercategories Usercategories[]
}

model TodoList {
  id         String   @id @default(cuid())
  uId        String
  title      String
  user       User     @relation(fields: [uId], references: [id])
  created_at DateTime @default(now())
  Todo       Todo[]
}

model Todo {
  id         String   @id @default(cuid())
  lId        String
  list       TodoList @relation(fields: [lId], references: [id])
  title      String
  remarks    String?
  completed  Boolean  @default(false)
  deadline   DateTime
  category   String?
  created_at DateTime @default(now())
}

model Usercategories {
  id    String @id @default(cuid())
  uId   String
  user  User   @relation(fields: [uId], references: [id])
  name  String
  color String
}
